<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".HomeFragment">

        <TextView
            android:id="@+id/textViewEmotionLabel"
            android:layout_width="176dp"
            android:layout_height="31dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/poppins_bold"
            android:text="WELCOME BACK! "
            android:textAlignment="textStart"
            android:textColor="#174C4F"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView4"
            android:layout_width="175dp"
            android:layout_height="166dp"
            android:layout_margin="16dp"
            android:layout_marginTop="28dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="167dp"
                android:layout_height="145dp"
                android:layout_marginLeft="2.5dp"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="13dp"
                android:src="@drawable/share_happy_emoji"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewEmotionLabel" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textViewEmotion"
            android:layout_width="232dp"
            android:layout_height="52dp"
            android:layout_marginTop="12dp"
            android:background="#FDFD96"
            android:gravity="center"
            android:text="User is Happy"
            android:textColor="#000000"
            android:textSize="18sp"

            android:fontFamily="@font/poppins_semibold"
            app:layout_constraintEnd_toEndOf="@+id/cardView4"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="@+id/cardView4"
            app:layout_constraintTop_toBottomOf="@+id/cardView4" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="350dp"
            android:layout_height="450dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="50dp"
            android:background="#FFFFFF"
            app:cardCornerRadius="19dp"
            app:layout_constraintEnd_toEndOf="@+id/textViewEmotion"
            app:layout_constraintHorizontal_bias="0.385"
            app:layout_constraintStart_toStartOf="@+id/textViewEmotion"
            app:layout_constraintTop_toBottomOf="@+id/textViewEmotion">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewSendEmotion"
                    android:layout_width="287dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:text="Share your emotion"
                    android:textColor="#6B9B9F"
                    android:textSize="23sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.587"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/buttonHappy"
                    android:layout_width="110dp"
                    android:layout_height="44dp"
                    android:layout_marginBottom="24dp"
                    android:backgroundTint="#FDFD96"
                    android:text="HAPPY"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:cornerRadius="4dp"
                    android:fontFamily="@font/poppins_semibold"
                    app:layout_constraintBottom_toTopOf="@+id/imageView21"
                    app:layout_constraintEnd_toEndOf="@+id/imageView6"
                    app:layout_constraintHorizontal_bias="0.333"
                    app:layout_constraintStart_toStartOf="@+id/imageView6"
                    app:strokeColor="#000000"
                    app:strokeWidth="1dp" />

                <Button
                    android:id="@+id/buttonAngry"
                    android:layout_width="110dp"
                    android:layout_height="44dp"
                    android:layout_marginBottom="36dp"
                    android:backgroundTint="#FD9696"
                    android:text="MAD"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:cornerRadius="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/imageView21"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/imageView21"
                    app:strokeColor="#000000"
                    android:fontFamily="@font/poppins_semibold"
                    app:strokeWidth="1dp" />

                <Button
                    android:id="@+id/buttonSad"
                    android:layout_width="110dp"
                    android:layout_height="44dp"
                    android:layout_marginBottom="24dp"
                    android:backgroundTint="#3A9BDC"
                    android:text="SAD"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:cornerRadius="4dp"
                    android:fontFamily="@font/poppins_semibold"
                    app:layout_constraintBottom_toTopOf="@+id/imageView20"
                    app:layout_constraintEnd_toEndOf="@+id/imageView19"
                    app:layout_constraintHorizontal_bias="0.666"
                    app:layout_constraintStart_toStartOf="@+id/imageView19"
                    app:strokeColor="#000000"
                    app:strokeWidth="1dp" />

                <Button
                    android:id="@+id/buttonFear"
                    android:layout_width="110dp"
                    android:layout_height="44dp"
                    android:layout_marginBottom="36dp"
                    android:backgroundTint="#D79CFC"
                    android:text="FEAR"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:cornerRadius="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/imageView20"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/imageView20"
                    app:strokeColor="#000000"
                    android:fontFamily="@font/poppins_semibold"
                    app:strokeWidth="1dp" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="44dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/happy_display"
                    app:layout_constraintBottom_toTopOf="@+id/buttonHappy"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.897" />

                <ImageView
                    android:id="@+id/imageView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/sad_display"
                    app:layout_constraintBottom_toTopOf="@+id/buttonSad"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView6"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.897" />

                <ImageView
                    android:id="@+id/imageView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/fear_display"
                    app:layout_constraintBottom_toTopOf="@+id/buttonFear"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView21" />

                <ImageView
                    android:id="@+id/imageView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/mad_display"
                    app:layout_constraintBottom_toTopOf="@+id/buttonAngry"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewSuggestions"
            android:layout_width="366dp"
            android:layout_height="268dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="19dp"
            app:layout_constraintEnd_toEndOf="@+id/cardView"
            app:layout_constraintStart_toStartOf="@+id/cardView"
            app:layout_constraintTop_toBottomOf="@+id/cardView">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="359dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textViewSuggestions"
                    android:layout_width="330dp"
                    android:layout_height="234dp"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Suggestions: \n\n\t1. Activity One\n\t2. Activity Two\n\t3. Activity Three"
                    android:textColor="#174C4F"
                    android:textSize="17sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="91dp"
            android:layout_height="31dp"
            android:fontFamily="@font/poppins_medium"
            android:text="How are"
            android:textColor="#174C4F"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textViewEmotionLabel"
            app:layout_constraintTop_toTopOf="@+id/textViewEmotionLabel" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="you feeling today?"
            android:textColor="#174C4F"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/textViewEmotionLabel"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textViewEmotionLabel"
            app:layout_constraintTop_toBottomOf="@+id/textViewEmotionLabel" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
